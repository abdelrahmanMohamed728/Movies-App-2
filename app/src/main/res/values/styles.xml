<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="SignUpTextField" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    
    <style name="TitleTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/longline_quart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="progressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>

</resources>